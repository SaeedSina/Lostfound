<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        >
        <com.ssdev.saeedsina.lostfound.MyViews.MyTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/MyTextView"
            android:text="@string/ourstatistic"
            android:textAlignment="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:gravity="center">

                <com.ssdev.saeedsina.lostfound.MyViews.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/foundcount_lable"
                    android:textSize="15sp"
                    style="@style/MyTextView"

                    android:layout_weight="1" />

                <com.ssdev.saeedsina.lostfound.MyViews.MyTextView
                    android:id="@+id/foundcount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    style="@style/MyTextView"

                    android:text="..."
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:gravity="start">

                <com.ssdev.saeedsina.lostfound.MyViews.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/lostadcount_lable"
                    style="@style/MyTextView"
                    android:textSize="15sp"
                    android:layout_weight="1" />

                <com.ssdev.saeedsina.lostfound.MyViews.MyTextView
                    android:id="@+id/lostcount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    style="@style/MyTextView"
                    android:text="..."
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>

        <com.ogaclejapan.arclayout.ArcLayout
            android:id="@+id/arc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:arc_origin="center"
            app:arc_radius="168dp"
            app:arc_axisRadius="120dp"
            app:arc_freeAngle="false"
            android:layout_marginTop="100dp"
            app:arc_reverseAngle="false"
            >
            <com.ssdev.saeedsina.lostfound.MyViews.MyButton
                android:tag="no"
                android:id="@+id/btn_ilost"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="@string/ilost"
                android:background="@drawable/menu_button_selector"
                app:arc_origin="center"
                />
            <com.ssdev.saeedsina.lostfound.MyViews.MyButton
                android:id="@+id/btn_logout"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="@string/logout"
                android:background="@drawable/menu_button_selector"
                app:arc_origin="center"
                />
            <com.ssdev.saeedsina.lostfound.MyViews.MyButton
                android:id="@+id/btn_support"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="@string/support"
                android:background="@drawable/menu_button_selector"
                app:arc_origin="center"
                android:visibility="gone" />

            <com.ssdev.saeedsina.lostfound.MyViews.MyButton
                android:id="@+id/btn_adlist"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="@string/adlist"
                android:background="@drawable/menu_button_selector"
                app:arc_origin="center"
                />
            <com.ssdev.saeedsina.lostfound.MyViews.MyButton
                android:id="@+id/btn_myaccount"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="@string/myaccount"
                android:background="@drawable/menu_button_selector"
                app:arc_origin="center"
                />
            <com.ssdev.saeedsina.lostfound.MyViews.MyButton
                android:id="@+id/btn_enter"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="@string/enter"
                android:background="@drawable/menu_button_selector"
                app:arc_origin="center"
                />
            <com.ssdev.saeedsina.lostfound.MyViews.MyButton
                android:id="@+id/btn_ifound"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="@string/ifound"
                android:background="@drawable/menu_button_selector"
                app:arc_origin="center"
                />
            <com.ssdev.saeedsina.lostfound.MyViews.MyButton
                android:id="@+id/btn_about"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="@string/about"
                android:background="@drawable/menu_button_selector"
                app:arc_origin="center"
                />

        </com.ogaclejapan.arclayout.ArcLayout>

    </LinearLayout>
</LinearLayout>