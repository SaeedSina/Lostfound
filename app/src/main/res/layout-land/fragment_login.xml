<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="56dp"
    tools:context="com.ssdev.saeedsina.lostfound.MyActivities.MainActivity"
    android:orientation="vertical"
    >
    <com.ssdev.saeedsina.lostfound.MyViews.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loginmsg"
        android:gravity="center"
        style="@style/MyTextView"
        />

    <com.ssdev.saeedsina.lostfound.MyViews.MyEditTextWrapp
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <com.ssdev.saeedsina.lostfound.MyViews.MyEditText
            android:id="@+id/txt_login_username"
            android:layout_width="match_parent"
            android:gravity="start"
            android:layout_height="wrap_content"
            android:hint="@string/username"
            android:singleLine="true"
            android:maxLines="1"
            android:textColorLink="?android:attr/colorActivatedHighlight" />
    </com.ssdev.saeedsina.lostfound.MyViews.MyEditTextWrapp>

    <com.ssdev.saeedsina.lostfound.MyViews.MyEditTextWrapp
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <com.ssdev.saeedsina.lostfound.MyViews.MyEditText
            android:id="@+id/txt_login_password"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="@string/password"
            android:maxLines="1"
            />
    </com.ssdev.saeedsina.lostfound.MyViews.MyEditTextWrapp>

    <com.ssdev.saeedsina.lostfound.MyViews.MyButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        style="@style/MyButton"
        />
    <com.ssdev.saeedsina.lostfound.MyViews.MyTextView
        android:id="@+id/txt_regrequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/regrequest"
        android:gravity="center"
        style="@style/MyTextView"
        android:textSize="18sp"
        />
</LinearLayout>
